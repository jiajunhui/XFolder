<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000">

    <LinearLayout
        android:id="@id/cover_player_controller_top_container"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:background="@color/play_alpha_black"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@id/cover_player_controller_image_view_back_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_player_back"/>
            <TextView
                android:id="@id/cover_player_controller_text_view_video_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/cover_player_controller_image_view_back_icon"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textSize="15sp"
                android:textColor="@color/play_video_title_color"
                android:text=""/>
        </RelativeLayout>
        <TextView
            android:id="@id/cover_player_controller_text_view_system_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:maxLines="1"
            android:textSize="13sp"
            android:textColor="@color/play_system_time_color"
            android:gravity="center"
            android:text="10:08"/>
        <com.kk.taurus.playerbase.view.BatteryView
            android:id="@id/cover_player_controller_view_battery_state"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            app:border_width="2dp"
            app:border_color="#ffffff"
            app:head_orientation="left"
            app:show_type="fill"
            app:progress_color="#ffffff"
            app:number_text_size="12sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@id/cover_player_controller_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@color/play_alpha_black"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@id/cover_player_controller_image_view_play_state"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_play_state"/>
        <TextView
            android:id="@id/cover_player_controller_text_view_curr_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="00:00:00"/>
        <SeekBar
            android:id="@id/cover_player_controller_seek_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxHeight="5dp"
            android:minHeight="5dp"
            android:focusable="false"
            android:splitTrack="false"
            android:progressDrawable="@drawable/selector_scan_image_seekbar"
            android:thumb="@drawable/selector_seek_bar_thumb"/>
        <TextView
            android:id="@id/cover_player_controller_text_view_total_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="00:00:00"/>

        <ImageView
            android:id="@+id/iv_show_type"
            android:layout_width="36dp"
            android:layout_height="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@mipmap/icon_full_screen"/>
    </LinearLayout>

</RelativeLayout>