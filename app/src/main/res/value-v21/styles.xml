<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseFrameTheme.ActivityAnimation">
        <!-- Customize your theme here. -->
        <item name="android:layout_height">48dp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ScanVideo" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/scan_video_colorPrimary</item>
        <item name="colorPrimaryDark">@color/scan_video_colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ScanImage" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/scan_image_colorPrimary</item>
        <item name="colorPrimaryDark">@color/scan_image_colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ScanAudio" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/scan_audio_colorPrimary</item>
        <item name="colorPrimaryDark">@color/scan_audio_colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TabLayoutTextStyle">
        <item name="android:textSize">13sp</item>
    </style>

    <!--自定义switch的按钮和轨迹颜色theme-->
    <style name="mySwitch" parent="Theme.AppCompat.Light">
        <!-- switch 打开时的按钮的颜色 轨迹颜色默认为30%（看效果就明白30%是怎么回事了）这个颜色 -->
        <item name="colorControlActivated">@android:color/holo_green_dark</item>
        <!--  switch关闭时的按钮的颜色 -->
        <item name="colorSwitchThumbNormal">@color/colorAccent</item>
        <!-- switch关闭时的轨迹的颜色 30%这个颜色 -->
        <item name="android:colorForeground">@color/colorPrimaryDark</item>

    </style>


    <style name="AppThemeHome.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>



</resources>
